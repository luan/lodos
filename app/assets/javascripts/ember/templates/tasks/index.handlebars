{{#formFor "task" id="task"}}
  {{input "description"}}
  {{submit "Go"}}
{{/formFor}}

<ul id="tasks">
  {{#each tasks.reverse}}
    {{#view Lodos.TaskShow taskBinding="this"}}
      {{view Ember.Checkbox valueBinding="task.done" class="mark-as-done"}}
      {{task.description}}
      <a class="delete" {{action "delete" target="task"}}>X</a>
    {{/view}}
  {{/each}}
</ul>